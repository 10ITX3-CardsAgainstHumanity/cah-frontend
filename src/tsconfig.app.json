{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    "paths": {
      "@app/*": ["src/app/*"],
      "@shared/*": ["src/app/shared/*"],
      "@store/*": ["src/app/store/*"],
      "@interfaces/*": ["src/app/shared/interfaces/*"],
      "@services/*": ["src/app/shared/services/*"],
      "@modules/*": ["src/app/modules/*"],
      "@assets/*": ["src/assets/*"],
      "@env/*": ["src/environments/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
